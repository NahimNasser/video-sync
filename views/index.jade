doctype html
html
    head
        title Awesome Video Player
    body
        nav.navbar.navbar-default.navbar-static-top
            span.navbar-brand 
                strong Awesome Video Player
        .container
            .row
                .col-md-9
                    form.input-group.prevent-default
                        input#name.form-control(type='text')
                        span.input-group-btn
                            input#update_name.btn.btn-primary(type='submit', value='change your name')

                    form.input-group.prevent-default
                        input#video_url.form-control(type="text", placeholder="video mp4 url here")
                        span.input-group-btn
                            input#change_url.btn.btn-primary(type="submit", value="Change video")
                    
                    #video_area
                        video#main_video(controls)
                             source(src="public/sample.mp4", type='video/mp4')

                .col-md-3
                    .panel.panel-info
                        .panel-heading People connected
                        #connected_clients

            
                
        
    link(rel="stylesheet", href="//netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css")
    script(src="//code.jquery.com/jquery-1.10.2.min.js")
    script(src="/socket.io/socket.io.js")

    <!-- App stuff -->
    link(rel="stylesheet", href="/public/css/main.css")
    script(src="/public/js/socket.js")
    script(src="/public/js/main.js")
